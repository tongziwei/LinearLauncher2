<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:lb="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/bottom_grid_item_width"
        android:layout_height="@dimen/bottom_grid_item_height"
        android:orientation="vertical"
        android:gravity="center">

        <com.ayst.linearlauncher.widget.CircleImageView
                android:id="@+id/iv"
                android:layout_width="@dimen/bottom_grid_item_iv_width"
                android:layout_height="@dimen/bottom_grid_item_iv_height"
                android:focusable="false"
                android:contentDescription="@null"/>

        <TextView
                android:id="@+id/tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:focusable="false"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:textColor="@color/white"
                android:textSize="@dimen/bottom_grid_item_tv_text_size"/>
</LinearLayout>