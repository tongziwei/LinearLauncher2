<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:lb="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/grid_item_width"
        android:layout_height="@dimen/grid_item_height"
        android:orientation="vertical"
        android:padding="5dp"
        android:gravity="center">

    <LinearLayout android:id="@+id/iv_bg"
                  android:layout_width="@dimen/grid_item_iv_width"
                  android:layout_height="@dimen/grid_item_iv_height"
                  android:orientation="vertical"
                  android:padding="10dp"
                  android:background="@drawable/bg_grid_icon">
        <com.ayst.linearlauncher.widget.CircleImageView
                android:id="@+id/iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false"
                android:contentDescription="@null"/>
    </LinearLayout>

    <TextView
            android:id="@+id/tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:focusable="false"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textColor="@color/white"
            android:textSize="@dimen/grid_item_tv_text_size"/>

</LinearLayout>